<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/linearLayout4">
    <TextView
            android:id="@+id/match_title"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Match Title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="17dp" app:layout_constraintEnd_toStartOf="@+id/imageView"
            android:layout_marginEnd="258dp" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/match_date" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>


    <TextView
            android:id="@+id/match_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Date"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/match_title" app:layout_constraintEnd_toStartOf="@+id/imageView"
            android:layout_marginEnd="212dp" app:layout_constraintBottom_toTopOf="@+id/score_A"
            android:layout_marginStart="9dp" app:layout_constraintStart_toEndOf="@+id/team_A"/>
    <TextView
            android:id="@+id/team_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team A"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/match_title" app:layout_constraintEnd_toStartOf="@+id/match_date"
            android:layout_marginEnd="9dp" android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/team_B"/>
    <TextView
            android:id="@+id/score_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score A"
            app:layout_constraintStart_toEndOf="@+id/team_A" android:layout_marginStart="18dp"
            app:layout_constraintTop_toBottomOf="@+id/match_date" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/score_B"/>


    <TextView
            android:id="@+id/team_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/team_A" app:layout_constraintEnd_toStartOf="@+id/score_B"
            android:layout_marginEnd="11dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:id="@+id/score_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score B"
            app:layout_constraintTop_toBottomOf="@+id/score_A" android:layout_marginEnd="286dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="2dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_winning" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="31dp" android:layout_marginEnd="4dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="23dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>